{
  "engines": {
    "node": "15"
  },
  "name": "xbt",
  "version": "1.2.0",
  "description": "",
  "main": "networks.js",
  "scripts": {
    "truffle:migrate": "truffle migrate -f 2 --to 2 --reset --compile-all --network ganache",
    "truffle:console": "truffle console --network local",
    "truffle:migrate:mainnet": "truffle migrate -f 2 --to 2 --network=mainnet",
    "truffle:migrate:testnet": "rm -rf ./build  && npx truffle migrate -f 2 --to 2 --network=bsc_testnet",
    "truffle:upgrade:testnet": "rm -rf ./build  && npx truffle migrate -f 3 --to 3 --network=bsc_testnet",
    "truffle:verify:testnet": "npx truffle run verify XBN@0x2a017B876c50104C7Db3Ca59BC9a7aaD67388513 --network bsc_testnet",
    "hardhat:start": "npx hardhat node --network hardhat",
    "oz_deploy": "rm -rf ./build && ./scripts/compile-contracts.sh && npx openzeppelin deploy",
    "verify:mainnet": "npx truffle run verify XBN@0xE35A0B8a89Bc0Fc906E29Cc149bfbf06D6D75658 --network bsc",
    "hardhat:compile": "hardhat compile --network ganache",
    "hardhat:verify": "npx hardhat verify --network bsc_testnet 0xA5699adc4457b502D4F6C68CC0571172eFF0C33e",
    "deployXBT:hardhat": "hardhat deployXBT --network ganache",
    "deployAirdropLander:hardhat": "hardhat deployAirdropLander --network ganache",
    "compile-contracts": "./scripts/compile-contracts.sh",
    "lint": "npx eslint ./scripts ./test ./util *.js --cache --fix && npx solhint ./contracts/*.sol",
    "test": "./scripts/test.sh",
    "test-coverage": "NODE_OPTIONS=\"--max-old-space-size=4096\" node ./scripts/coverage.js",
    "flatten": "truffle-flattener ./contracts/distribution/HappyDealer.sol > ./flatten-contracts/HappyDealerFlat.sol",
    "flatten-xbn": "npx truffle-flattener ./contracts/xbn-protocol/XBN.sol > ./contracts/flatten-contracts/XBNFlat.sol"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.8",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/buidler-upgrades": "^1.2.1",
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/gsn-provider": "^0.1.11",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.10",
    "app-root-path": "^3.0.0",
    "chai": "^4.2.0",
    "child_process": "^1.0.2",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-mocha": "0.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^1.3.2",
    "eslint-plugin-spellcheck": "0.0.10",
    "eslint-plugin-standard": "^1.3.3",
    "ethereum-waffle": "^3.1.2",
    "ethers": "^5.0.19",
    "hardhat": "^2.0.6",
    "moment": "^2.29.1",
    "solidity-coverage": "^0.7.13",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-plugin-verify": "^0.5.7"
  },
  "dependencies": {
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.4.3",
    "@openzeppelin/truffle-upgrades": "1.3.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "@truffle/hdwallet-provider": "1.2.3",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "dotenv": "^8.2.0",
    "solc": "^0.7.4",
    "truffle": "^5.1.50",
    "truffle-flattener": "^1.5.0",
    "web3": "^1.3.1"
  }
}
